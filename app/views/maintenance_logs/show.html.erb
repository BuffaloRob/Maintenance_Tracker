<div class="form-group">
  <div class="col-auto">
    <h5>Date Performed:</h5>
    <% if @maintenance_log.date_performed %>
      <%= formatted_date_performed(@maintenance_log) %><br>
    <% else %>
      No Date Entered
    <% end %>
  </div>
  <br>
  <div class="col-auto">
    <h5>Date due:</h5>
    <% if @maintenance_log.date_due %>
      <%= formatted_date_due(@maintenance_log) %><br>
    <% else %>
      No Date Entered
    <% end %>
  </div>
  <br>
  <div class="col-auto">
    <h5>Tools Required:</h5>
    <%= @maintenance_log.tools %><br>
  </div>
  <br>
  <div class="col-auto">
    <h5>Cost:</h5>
    $<%= @maintenance_log.cost %><br>
  </div>
  <br>
  <div class="col-auto">
    <h5>Notes:</h5>
    <%= @maintenance_log.notes %><br>
  </div>
  <br>
  <div class="col-auto">
    <%= link_to  "Edit", edit_maintenance_category_maintenance_log_path(@maintenance_log.maintenance_category_id, @maintenance_log), html_options = {class: 'badge badge-primary'} %><br>
    <%= link_to  "Add a New Entry", new_maintenance_log_path, html_options = {class: 'badge badge-primary'} %><br>
  </div>
</div>