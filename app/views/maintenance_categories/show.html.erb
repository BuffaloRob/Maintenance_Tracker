
<h3>Logs for <%= @maintenance_category.name %></h3>

<%= link_to  "Edit #{@maintenance_category.name}", edit_maintenance_category_path(@maintenance_category), html_options = {class: 'badge badge-dark'} %><br>
<br>

<div <li class="list-group"> 
  <%= @maintenance_category.maintenance_logs.each do |log| %>
    <% unless log.date_performed.nil? %>
      <li class="d-flex align-items-start flex-md-row">
        <%= link_to  "Performed on #{formatted_date_performed(log)}" , maintenance_log_path(log), html_options = {class: 'list-group-item list-group-item-action list-group-item-light'} %>

        <%= link_to  "Show Details", maintenance_log_path(log), id: "detailsBtn_#{log.id}" ,class: 'btn align-self-center badge badge-primary' %>
      </li>
      <br>
      <div class="accordion" >
        <div id="<%= "showDetails_#{log.id}" %>"></div>
      </div>
    <% end %>
  <% end %>
</div>
<br>

<%= link_to "Back to #{@maintenance_item.name}", maintenance_item_path(@maintenance_item), html_options = {class: 'badge badge-primary'} %><br>
<%= link_to  "Add a new log entry", new_maintenance_item_maintenance_log_path(@maintenance_item), html_options = {class: 'badge badge-primary'} %>
