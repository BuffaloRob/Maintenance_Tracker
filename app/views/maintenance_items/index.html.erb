<div class="col-md-4">
  <h3>Maintenance Items</h3>
  <div class="list-group list-group-flush">
    <% @maintenance_items.each do |item| %>
      <li class="d-flex align-items-start flex-md-row">
        <%= link_to item.name, maintenance_item_path(item), html_options = {class: 'list-group-item list-group-item-action list-group-item-light'} %>
        <span class="badge badge-danger badge-pill"><%= item.maintenance_categories.count %></span>
      </li>
      <br>
    <% end %>
  </div>
  <br>
  <%= link_to 'Add New Maintenance Item', new_maintenance_item_path, html_options = {class: 'badge badge-primary'} %>
</div>
